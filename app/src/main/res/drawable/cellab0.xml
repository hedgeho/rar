<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="?table_stroke" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/absent" />
            <solid android:color="@color/absent" />
        </shape>
    </item>

</layer-list>