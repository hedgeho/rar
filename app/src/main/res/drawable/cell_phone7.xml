<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="?table_stroke" />
        </shape>
    </item>

    <item android:bottom="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="?main" />
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>