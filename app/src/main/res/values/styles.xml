<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?main_font</item>
        <item name="android:textColorHint">?second_font</item>
    </style>
    
    <style name="AppTheme.TextViewTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?second_font</item>
    </style>

    <style name="AppTheme.SwitchTheme" parent="Widget.AppCompat.CompoundButton.Switch">
    </style>

    <style name="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">?null_font</item>
        <item name="colorControlNormal">?second_font</item>
        <item name="android:windowTitleStyle">@style/AppTheme.TextViewTheme</item>
    </style>

    <style name="MyLightTheme.AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
<!--        <item name="android:background">#ff0000</item>-->
        <item name="android:textColorAlertDialogListItem">?main_font</item>
    </style>

    <style name="MyLightTheme.ToolbarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?third_font</item>
        <item name="android:textColorSecondary">?third_font</item>
    </style>

    <style name="MyDarkTheme.ToolbarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>
</resources>
